{
  "name": "jsg-stylizer",
  "version": "0.0.1",
  "description": "Config-driven font picker with DevTools sidebar for experimenting with Google Fonts",
  "type": "module",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:demo": "BUILD_DEMO=true vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "test": "npm run type-check",
    "demo": "DEMO_MODE=true vite --open",
    "analyze": "npm run build && open dist/stats.html",
    "release:patch": "git add -A && git commit -m 'chore: prepare for release' || true && echo 'y' | np patch --no-tests --any-branch",
    "release:minor": "git add -A && git commit -m 'chore: prepare for release' || true && echo 'y' | np minor --no-tests --any-branch",
    "release:major": "git add -A && git commit -m 'chore: prepare for release' || true && echo 'y' | np major --no-tests --any-branch",
    "release:first": "npm run build && npm publish"
  },
  "dependencies": {
    "@crimsonsunset/jsg-logger": "^1.7.7"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.0",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.2",
    "evergreen-ui": "^7.1.9",
    "fontpicker": "github:wipeautcrafter/jsfontpicker",
    "lodash.merge": "^4.6.2",
    "np": "^10.2.0",
    "preact": "^10.19.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "font-picker",
    "google-fonts",
    "typography",
    "framework-agnostic",
    "preact",
    "devtools",
    "sidebar",
    "css-variables",
    "react",
    "vue",
    "svelte",
    "astro"
  ],
  "author": "JSG Tech Check",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crimsonsunset/jsg-stylizer.git"
  }
}
